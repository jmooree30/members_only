<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>


 <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <p class="navbar-brand">Members Only!</p>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to posts_path, class: "btn btn-black" do %>
      <span class="glyphicon glyphicon-list-alt"></span> Posts
      <% end %></li>
      <li><%= link_to root_path, class: "btn btn-black" do %>
      <span class="glyphicon glyphicon-home"></span> Home
      <% end %></li>
      <% if !logged_in? %> 
      <li><%= link_to login_path, class: "btn btn-black" do %>
      <span class="glyphicon glyphicon-log-in"></span> Login
      <% end %></li>
      <li><%= link_to new_user_path, class: "btn btn-black" do %>
      <span class="glyphicon glyphicon-pencil"></span> Signup
      <% end %></li>
      <% else %>     
      <li><%= link_to logout_path, method: :delete, class: "btn btn-black" do %>
      <span class="glyphicon glyphicon-log-in"></span> Logout
      <% end %></li>
      <% end %>
      <% if logged_in?  %>
      <li><%= link_to root_path, class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-user"></span> <%= current_user.name %>
      <% end %>
      <% end %></li>      
    </ul>
  </div>
</nav> 

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="footer">Â© 2017 Jacob Moore.</div>

      <%= yield %>    
  </body>
</html>
