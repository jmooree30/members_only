<div class="form-group">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@user) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :email %>
<%= f.email_field :email %><br>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Sign up" %>
    <% end %>
  </div>
</div>